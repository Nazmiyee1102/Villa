@model ResultProductDto

@{
    ViewData["Title"] = "Mülk Detayı Görüntüleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">
    <tr>
        <th><img src="@Model.ImageUrl" style="height:200px; width:200px;"/></th>
    </tr>
    <tr>
        <th>Adres : </th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Kategori : </th>
        <td>@Model.Category</td>
    </tr>
    <tr>
        <th>Fiyat : </th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>Oda Sayısı : </th>
        <td>@Model.BedroomCount</td>
        
        <th>Banyo Sayısı : </th>
        <td>@Model.BathroomCount</td>
        
        <th>Metrekare : </th>
        <td>@Model.Area m2</td>
        
        <th>Kat Sayısı : </th>
        <td>@Model.Floor</td>

        <th>Park Alanı Sayısı : </th>
        <td>@Model.ParkingCount</td>
    </tr>
</table>
<a asp-controller="Product" asp-action="Index" class="btn btn-dark">Mülklere Geri Dön</a>
