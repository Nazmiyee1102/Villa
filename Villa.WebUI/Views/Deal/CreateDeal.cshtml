@model CreateDealDto

@{
    ViewData["Title"] = "Teni Teklif Oluşturma Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>İlan Türü</label>
    <input type="text" asp-for="Type" class="form-control" />
    <span asp-validation-for="Type" class="text-danger"></span>
    <br/>

    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
    <br/>

    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    
    <label>Metrekare</label>
    <input type="text" asp-for="Square" class="form-control" />
    <span asp-validation-for="Square" class="text-danger"></span>
    <br />

    <label>Kaçıncı Kat</label>
    <input type="text" asp-for="Floor" class="form-control" />
    <span asp-validation-for="Floor" class="text-danger"></span>
    <br />

    <label>Oda Sayısı</label>
    <input type="text" asp-for="RoomCount" class="form-control" />
    <span asp-validation-for="RoomCount" class="text-danger"></span>
    <br />

    <label>Ödeme Türü</label>
    <input type="text" asp-for="PaymentType" class="form-control" />
    <span asp-validation-for="PaymentType" class="text-danger"></span>
    <br />

     <label>Park Alanı</label>
    <span asp-validation-for="HasParkingArea" class="text-danger"></span>
    <select>asp-for="HasParkingArea" class="form-control" />
    <option>Seçiminizi Yapın</option>
    <option value="true">Var</option>
    <option value="false">Yok</option>
    </select>
    <br />
    <button class="btn btn-outline-dark">Kaydet</button>
</form>

